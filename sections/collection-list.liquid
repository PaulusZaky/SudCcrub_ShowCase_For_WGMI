<style>
  #shopify-section-{{ section.id }} .collection-list {
    {%- if section.settings.stack_collections -%}
      --collection-list-grid: auto / repeat({{ section.settings.collections_per_row_mobile | times: 1 }}, minmax(0, 1fr));
    {%- else -%}
      --collection-list-grid: auto / auto-flow 73vw;
    {%- endif -%}
    gap: 0;
  }
  #shopify-section-{{ section.id }} .swiper {
    width: auto;
  }
  #shopify-section-{{ section.id }} .section-blends {
    background-image: unset !important;
    background-color: #FFFFFF;
  }

  #shopify-section-{{ section.id }} .section {
    padding: 32px 0;
  }
  #shopify-section-{{ section.id }} .floating-controls-container {
    display: block;
  }

  {% comment %} #shopify-section-{{ section.id }} .collection-list {
    justify-content: center;
    {% comment %} gap: var(--spacing-4); {% endcomment %}
  } {% endcomment %}
  .content-over-media {
    display: flex;
    flex-direction: column;
    gap: 4px;
    grid-template: none;
  }
  #shopify-section-{{ section.id }} .collection-list-mobile .content-over-media{
    padding: 0 10px;
  }
  #shopify-section-{{ section.id }} .styled_text::part(split-lines)::after {
    background: #B7E3D8;
  }
  .no-wrap .collection-list-mobile {
    display: flex;
    grid: none !important;
    flex-direction: column;
    gap: 8px;
  }
  .swiper-wrapper .collection-card {
    margin-right: 0 !important;
  }
  .collection-card__content:first-child {
    margin-block-end: 0;
  }
  .collection-card__content-wrapper {
    margin: auto;
  }

  .collection-list-mobile .collection-card__content-wrapper {
    height: auto;
  }
  .collection-card__content-wrapper svg{
    opacity: 1;
    visibility: visible;
    width: 13.5px;
    height: 13.5px;
  }
  .collection-card:hover .collection-card__content svg{
    transform: translateY(calc(var(--transition-direction) * -1px));
  }

  .next-button {
      right: 40px !important;
  }

  .prev-button {
      left: 40px !important;
  }

  .collection-card__content .subheading {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--heading-font-family);
    background: unset !important;
    line-height: 1px;
    text-decoration: none;
    cursor: pointer;
    transition: .2s;
    color: #000;
    font-size: 16px;
    line-height: 18px;
    font-weight: 400;
  }
  .navigation-with-controls .collection-card__content .subheading {
    font-size: 20px;
    line-height: 23px;
  }
  .collection-list-mobile .collection-card__content .subheading {
    line-height: 24px;
  }
