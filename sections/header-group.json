{
  "type": "header",
  "name": "Header group",
  "sections": {
    "announcement-bar": {
      "type": "announcement-bar",
      "blocks": {
        "message": {
          "type": "message",
          "settings": {
            "text": "FREE US SHIPPING ON ALL $19+ ORDERS!",
            "url": "https://www.sudscrub.com/policies/shipping-policy"
          }
        }
      },
      "block_order": ["message"],
      "custom_css": [],
      "settings": {
        "enable_sticky": false,
        "autoplay": false,
        "cycle_speed": 6,
        "text_size": "text-xs",
        "navigation_mode": "arrows",
        "scrolling_speed": 10,
        "background": "#1a1a1a",
        "background_gradient": "",
        "text_color": "#ffffff"
      }
    },
    "header": {
      "type": "header",
      "settings": {
        "enable_sticky": true,
        "hide_on_scroll": false,
        "logo": "{{shop.brand.logo}}",
        "logo_max_width": 180,
        "logo_mobile_max_width": 100,
        "menu": "main-menu-for-new-theme",
        "sidebar_menu": "",
        "secondary_menu": "",
        "menu_open_trigger": "click",
        "opening_from": "left",
        "layout": "logo_left_navigation_center",
        "show_social_media": true,
        "show_locale_selector": false,
        "show_country_selector": false,
        "show_country_flag": false,
        "show_country_name": false,
        "transparent_header_text_color": "#ffffff",
        "reduce_padding": false,
        "background_opacity": 100,
        "background_blur_radius": 0
      }
    }
  },
  "order": ["announcement-bar", "header"]
}
